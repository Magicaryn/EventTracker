<p>welcome {{username}}</req></p>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#writeUpModal" id="openModalButton">
    Write Up
</button>

<!-- Modal -->
<div class="modal fade" id="writeUpModal" tabindex="-1" role="dialog" aria-labelledby="writeUpModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="writeUpModalLabel">Write Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="userDropdown">Select User:</label>
                        <select class="form-control" id="userDropdown">
                            <!-- Populate dropdown with users from the database -->
                            {{#each users}}
                                    <option value="option{{@index}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="checkbox1">Warning:</label>
                        <input type="radio" id="checkbox1" name="checkbox" value="option1">
                        <label for="checkbox2">Write Up:</label>
                        <input type="radio" id="checkbox2" name="checkbox" value="option2">
                    </div>
                    <div class="form-group">
                        <label for="dropdown">Reason:</label>
                        <select class="form-control" id="dropdown">
                                    <option value="option1">Tardiness</option>
                                    <option value="option2">Insubordination</option>
                                    <option value="option3">Vulgar Language</option>
                                    <option value="option4">Incorrect Uniform</option>
                                    <option value="option5">No Show/Call Off</option>
                                    <option value="option6">Poor Performance</option>
                                    <option value="option7">Fraud</option>
                        </select>
                    </div>
                        <label for="commentsTextarea">Comments:</label>
                        <textarea class="form-control" id="commentsTextarea" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitbtn">Submit</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("openModalButton").addEventListener("click", function() {
        $('#writeUpModal').modal('show');
    });
</script>
<script src="js/writeup.js"></script>

